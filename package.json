{
	"name": "viewpoint",
	"version": "0.0.1",
	"scripts": {
		"dev": "npm run timestamp && svelte-kit dev",
		"timestamp": "echo \"<script context='module'>export const timestamp ='$(date '+%D @ %I:%M %Z')';</script>\" > src/lib/BuildTimeStamp.svelte",
		"build": "npm run timestamp && rm -rf build && svelte-kit build && touch ./build/.nojekyll",
		"preview": "svelte-kit preview",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^1.0.0-next.21",
		"@sveltejs/kit": "next",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"svelte": "^3.34.0"
	},
	"type": "module",
	"dependencies": {
		"@lukeed/uuid": "^2.0.0",
		"bulma": "^0.9.3",
		"cookie": "^0.4.1",
		"sass": "^1.43.4",
		"svelte-preprocess": "^4.9.8"
	}
}
